{% extends "::base.html.twig" %}

{% block title %}{{ 'notes.title' | trans }}{% endblock %}

{% block body_class %}notes{% endblock %}

{% block content %}
  <div class="notes-container">
  {% for note in notes %}
    <div class="note masonry-brick">
      <div class="alert alert-block normal-color">
        {% if note.text %}
        <h4><a href="{{ path('bibleText', { id: note.text.id } ) }}">{{ note.text.title }} - <em>{{ note.text.bibleRef }}</em></a></h4>
        <hr />
        {% endif %}
        <p>
          {{ note.noteText }}
        </p>
        <div class="notes-tools">
          <a href="{{ path('editNote', { id: note.id } ) }}" class="btn btn-small"><i class="icon-pencil"></i>Edit</a>
          <a href="{{ path('deleteNote', { id: note.id } ) }}" class="btn btn-small btn-danger"><i class="icon-trash icon-white"></i>Delete</a>
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
  <div class="clear"></div>
{% endblock %}
