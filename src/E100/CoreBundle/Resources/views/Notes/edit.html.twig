{% extends "::base.html.twig" %}

{% block title %}{{ 'notes.title' | trans }}{% endblock %}

{% block body_class %}edit-notes{% endblock %}

{% block content %}
    <div class="row-fluid">
      <h1>Edit note</h1>
      <p>Note was added to the text "{{ note.text.title }}".</p>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <form action="{{ path('editNote', { 'id': note.id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}

          <input type="submit" />
        </form>
      </div><!--/span-->
    </div><!--/row-->
{% endblock %}
