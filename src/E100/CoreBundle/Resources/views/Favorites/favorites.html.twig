{% extends "::base.html.twig" %}

{% block title %}{{ 'favorites.title' | trans }}{% endblock %}

{% block content %}
    <div class="row-fluid">
      <div class="span12">
        <h1>{{ 'favorites.welcome.title' | trans }}</h1>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        {% if favorites | length > 0 %}
        <div class="span6 favorite" id="old">
          <h2>{{ 'categories.old.title' | trans }}</h2>

          <table class="table">
              {% for favorite in favorites %}
                {% if favorite.theme.testament == 'old' %}
                  <tr><td><a href="{{ path('bibleText', { id: favorite.id } ) }}"><i class="icon-star"></i><strong>{{ loop.index }}. </strong>{{ favorite.title}}</a></td><td><a href="{{ path('deleteFavorites', { 'id': favorite.id }) }}" class="btn btn-delete btn-mini btn-danger"><i class="icon-trash icon-white"></i></a></td></tr>
                {% endif %}
             {% endfor %}
          </table>
        </div>
        <div class="span6 favorite" id="new">
          <h2>{{ 'categories.new.title' | trans }}</h2>
          <table class="table">
            {% for favorite in favorites %}
              {% if favorite.theme.testament == 'new' %}
                  <tr><td><a href="{{ path('bibleText', { id: favorite.id } ) }}"><i class="icon-star"></i><strong>{{ loop.index }}. </strong>{{ favorite.title}}</a></td><td><a href="{{ path('deleteFavorites', { 'id': favorite.id }) }}" class="btn btn-delete btn-mini btn-danger"><i class="icon-trash icon-white"></i></a></td></tr>
              {% endif %}
           {% endfor %}
          </table>
        </div>
        {% else %}
            <p>{{ 'favorites.nothingFound' | trans }}</p>
        {% endif %}
      </div><!--/span-->
    </div><!--/row-->
{% endblock %}
